// http://guides.rubyonrails.org/layouts_and_rendering.html#rendering-collections

// Update the search result.
$('#search_result').html(
  '<%= j(render "search_result") %>'
);

// Update the search meta.
$('#search_meta').html(
  '<%= j(render "search_meta", search_conditions: @search_conditions) %>'
);

// Update the title.
$('title').html(
  '<%= j(properties_title) %>'
);

// Update the markers.
window.App.maps.currentMap.updateMarkers(
  <%= raw @json %>
);

// Update the map's center.
window.App.maps.currentMap.map.panTo(
  <%= raw @center_lng_lat %>
);
